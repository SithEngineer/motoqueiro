<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">
  <Button
      android:id="@+id/learning_mode_text"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:text="@string/home_text_enter_learning_mode"
      android:textAppearance="@style/DefaultTextAppearance" />

  <Button
      android:id="@+id/testing_mode_text"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:text="@string/home_text_enter_testing_mode"
      android:textAppearance="@style/DefaultTextAppearance"
      android:enabled="false"
      />

  <android.support.design.widget.TextInputLayout
      android:id="@+id/miband_address_input_wrapper"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      >
    <EditText
        android:id="@+id/miband_address_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/home_heart_rate_band_address_hint"
        />
  </android.support.design.widget.TextInputLayout>
</LinearLayout>
